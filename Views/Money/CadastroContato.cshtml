@model MoneyTrack.Models.Contato
@{
    ViewData["Title"] = "Cadastro de Contato";
}

<head>
    <link rel="stylesheet" href="~/css/contato.css" />
</head>

<form method="POST" asp-page-handler="CadastroContato">
    
    <p>
        <label asp-for="Nome" style="color: #000;">Nome:</label>
        <input asp-for="Nome">
    </p>
    <p>
        <label asp-for="Email" style="color: #000;">E-mail:</label>
        <input asp-for="Email">
    </p>
    <p>
        <label asp-for="Mensagem" style="color: #000;">Precisa de ajuda?</label>
        <input asp-for="Mensagem">
    </p>
    <p>
        <label asp-for="DataEnvio" style="color: #000;">Data de Envio:</label>
        <input asp-for="DataEnvio">
    </p>
    <p>
        <label asp-for="Login" style="color: #000;">Login:</label>
        <input asp-for="Login">
    </p>
    <p>
        <label asp-for="Senha" style="color: #000;">Senha:</label>
        <input asp-for="Senha">
    </p>
    <p>
        <input type="submit" value="Cadastrar">
    </p>
</form>

<p>
    @ViewBag.Mensagem
</p>
