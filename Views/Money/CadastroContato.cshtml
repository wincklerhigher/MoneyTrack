@model MoneyTrack.Models.Contato
@{
    ViewData["Title"] = "Cadastro de Contato";
}

<head>
    <link rel="stylesheet" href="~/css/contato.css" />
</head>

<form method="POST" asp-page-handler="CadastroContato">
    
    <p>
        <label asp-for="Nome">Nome:</label>
        <input asp-for="Nome">
    </p>
    <p>
        <label asp-for="Email">E-mail:</label>
        <input asp-for="Email">
    </p>
    <p>
        <label asp-for="Mensagem">Precisa de ajuda?</label>
        <input asp-for="Mensagem">
    </p>
    <p>
        <label asp-for="DataEnvio">Data de Envio:</label>
        <input asp-for="DataEnvio">
    </p>
    <p>
        <label asp-for="Login">Login:</label>
        <input asp-for="Login">
    </p>
    <p>
        <label asp-for="Senha">Senha:</label>
        <input asp-for="Senha">
    </p>
    <p>
        <input type="submit" value="Cadastrar">
    </p>
</form>

<p>
    @ViewBag.Mensagem
</p>
