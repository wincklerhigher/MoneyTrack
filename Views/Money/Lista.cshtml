@model List<MoneyTrack.Models.Contato>
@{
    ViewData["Title"] = "Lista";
}

<head>
    <link rel="stylesheet" href="~/css/listaContatos.css" />
</head>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Mensagem</th>
            <th>Data de Envio</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contato in Model)
        {
            <tr>
                <td>@contato.IdContato</td>
                <td>@contato.Nome</td>
                <td>@contato.Email</td>
                <td>@contato.Mensagem</td>
                <td>@contato.DataEnvio</td>
                <td class="user-actions">
                    <a href="/Money/Remover?Id=@contato.IdContato">Excluir</a>
                    <a href="/Money/Editar?Id=@contato.IdContato">Editar</a>
                </td>                
            </tr>
        }
    </tbody>
</table>